<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Net"  parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background_white</item>
        <item name="colorPrimaryVariant">@color/main_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:listChoiceIndicatorMultiple"> @color/secondary_color</item>

        <!-- Secondary brand color. -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background_white</item>
        <item name="floatingActionButtonStyle">@style/FloatingActionButtonStyle</item>
        <item name="android:windowLightStatusBar" tools:ignore ="NewApi">true</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Signin" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/main_blue
        </item>

    </style>

    <style name="AddPost" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/white
        </item>
        <item name="android:windowLightStatusBar" tools:ignore ="NewApi">true</item>

    </style>

    <style name="Home" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/white
        </item>
        <item name="android:windowLightStatusBar" tools:ignore ="NewApi">true</item>
    </style>
    
    <style name="FloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay" >@style/FabShapeStyle</item>
        <item name="colorAccent">#9B9DD3</item>
    </style>

    <style name="FabShapeStyle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">15dp</item>


    </style>

    <style name="DialogSheetBottomTheme" parent="Theme.Design.BottomSheetDialog">

        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:listChoiceIndicatorMultiple"> @color/secondary_color</item>


    </style>

    <style name="BottomSheetStyle" >
        <item name="background">@drawable/transparent_background</item>

    </style>
</resources>