<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    tools:context=".ChoosingFieldsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

       <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:textSize="20dp"
        android:fontFamily="@font/poppins_bold"
        android:textAlignment="center"
        android:text="Choose your field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

       <View
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/text_color">

       </View>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="82dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
           >


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mobile_dev_layout"
                android:layout_width="152dp"
                android:padding="2dp"
                android:clickable="true"
                android:checkable="true"
                android:focusable="true"
                app:rippleColor="@android:color/transparent"
                android:layout_height="180dp"
                app:checkedIconTint="@color/secondary_color"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/white">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:layout_width="104dp"
                        android:layout_height="86dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:theme="@style/ThemeOverlay.AppCompat.Light"
                            android:src="@drawable/ic_mobile_dev_pic"
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        </ImageView>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Mobile developement"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="12dp"
                        android:textColor="@color/text_color"
                        android:layout_marginTop="32dp"
                        android:textAlignment="center">

                    </TextView>

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/web_dev_layout"
                android:layout_width="152dp"
                android:layout_height="180dp"
                android:layout_marginStart="15dp"
                app:cardCornerRadius="15dp"
                android:clickable="true"
                android:checkable="true"
                android:focusable="true"
                app:checkedIconTint="@color/secondary_color"
                app:rippleColor="@android:color/transparent"
                android:layout_gravity="end"
                app:cardElevation="0dp"
                android:padding="2dp"
                app:cardBackgroundColor="@color/white">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:layout_width="104dp"
                        android:layout_height="86dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:src="@drawable/ic_web_dev_pic"
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        </ImageView>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Web developement"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="12dp"
                        android:textColor="@color/text_color"
                        android:layout_marginTop="32dp"
                        android:textAlignment="center">

                    </TextView>

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>



        </LinearLayout>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/design_layout"
            android:layout_width="152dp"
            android:layout_height="180dp"
            app:cardCornerRadius="15dp"
            android:clickable="true"
            android:checkable="true"
            android:focusable="true"
            app:rippleColor="@android:color/transparent"
            app:checkedIconTint="@color/secondary_color"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="54dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/white">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="104dp"
                    android:layout_height="86dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_design_pic">

                    </ImageView>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Design"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="12dp"
                    android:textColor="@color/text_color"
                    android:layout_marginTop="32dp"
                    android:textAlignment="center">

                </TextView>

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>


        <Button
            android:id="@+id/choosing_field_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="62dp"
            android:background="@drawable/on_board_back_btn_shape"
            android:elevation="0dp"
            android:text="Get Started"
            android:textAllCaps="false"
            android:layout_marginBottom="5dp"
            android:textColor="@color/white"
            android:textSize="18dp">

        </Button>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>