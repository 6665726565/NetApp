<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/back_tab"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <FrameLayout
        android:background="@drawable/back_tab"
        android:layout_width="match_parent"
        android:layout_height="48dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/select_frame_result"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent">
            <TextView
                android:id="@+id/select"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/back_select"
                android:text="">

            </TextView>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent">

            <TextView
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="">

            </TextView>

            </FrameLayout>





        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <FrameLayout
                android:id="@+id/item1_frame_layout_result"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/item1_img_result"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:background="@drawable/ic_post_icon">

                    </ImageView>

                    <TextView
                        android:id="@+id/item1_txt_result"
                        android:layout_margin="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="14dp"
                        android:text="Posts">

                    </TextView>

                </LinearLayout>

            </FrameLayout>


            <FrameLayout
                android:id="@+id/item2_frame_layout_result"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item2_img_result"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:background="@drawable/ic_articles_icon">

                </ImageView>

                <TextView
                    android:id="@+id/item2_txt_result"
                    android:layout_margin="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#969696"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14dp"
                    android:text="Articles">

                </TextView>

            </LinearLayout>

            </FrameLayout>

        </LinearLayout>









    </FrameLayout>

</LinearLayout>