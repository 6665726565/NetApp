<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background_white"
    android:layout_height="match_parent"
    tools:context=".ChoosingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="20dp"
            android:fontFamily="@font/poppins_bold"
            android:textAlignment="center"
            android:text="Why do you want to join us ?"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:layout_width="160dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/text_color">

        </View>

        <androidx.cardview.widget.CardView
            android:id="@+id/skillsCard"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="62dp"
            android:layout_marginHorizontal="25dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="1dp"
            app:cardBackgroundColor="@color/white"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/newSkillImg"
                    android:layout_width="172dp"
                    android:layout_height="132dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/ic_new_skills">

                </ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    android:textColor="@color/text_color"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="12dp"
                    android:text="To learn new skills"
                    >

                </TextView>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/experienceCard"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="32dp"
            app:cardElevation="1dp"
            android:layout_marginHorizontal="25dp"
            app:cardCornerRadius="15dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/white"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                >

                <ImageView
                    android:background="@drawable/ic_share_experience"
                    android:id="@+id/shareExperImg"
                    android:layout_marginTop="8dp"
                    android:layout_width="172dp"
                    android:layout_height="132dp"
                    android:layout_gravity="center_horizontal">

                </ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    android:textColor="@color/text_color"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="12dp"
                    android:text="To share my experience"
                    >

                </TextView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>